<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Тёмная тема приложения -->
    <style name="Theme.Rutcameraapp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Пример: цвет Primary в тёмной теме -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>

        <!-- Цвет фона (background) -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <!-- Цвет текста на фоне -->
        <item name="android:textColorPrimary">@color/md_theme_dark_onBackground</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
</resources>
