<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Светлая тема приложения -->
    <style name="Theme.Rutcameraapp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Пример: цвет Primary в светлой теме -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <!-- Цвет фона (background) -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <!-- Цвет текста на фоне -->
        <item name="android:textColorPrimary">@color/md_theme_light_onBackground</item>

        <!-- Прозрачные панельки статусбара/навигации (опционально) -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
</resources>
